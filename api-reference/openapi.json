{
  "openapi": "3.1.0",
  "info": {
    "title": "Aiminis POS API (Full Version)",
    "version": "1.0.0",
    "description": "Full OpenAPI specification for Aiminis POS system, converted from Postman Collection.\nIncludes Auth, Users, Products, Flash Sales, Loyalty, Promotions, Booking, Affiliate, Games, Insurance, and more."
  },
  "servers": [
    {
      "url": "https://upload.aimini.vn",
      "description": "Production API server (Aiminis POS)"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [{ "bearerAuth": [] }],
  "paths": {
    "/api/v1/auth/login": {
      "post": {
        "summary": "Login POS",
        "description": "Authenticate POS user and return JWT token.",
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "example": "user@example.com" },
                  "password": { "type": "string", "example": "12345678" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login success",
            "content": {
              "application/json": {
                "example": {
                  "data": {
                    "token": "JWT_TOKEN_EXAMPLE",
                    "user": { "id": 1, "name": "Admin", "role": "manager" }
                  }
                }
              }
            }
          },
          "401": { "description": "Invalid credentials" }
        }
      }
    },   
    "/api/v1/custom-collection": {
      "get": {
        "tags": ["Custom Collection"],
        "summary": "[GET] Custom collections",
        "description": "Retrieve all custom collections created by the user, including nested parent-child hierarchy if applicable.",
        "responses": {
          "200": {
            "description": "List of custom collections",
            "content": {
              "application/json": {
                "example": {
                  "data": [
                    {
                      "id": "8qA9dVqo",
                      "name": "Danh mục chính",
                      "slug": "danh-muc-chinh",
                      "parent_id": null,
                      "children": [
                        {
                          "id": "7bv3gPWj",
                          "name": "Danh mục con",
                          "slug": "danh-muc-con"
                        }
                      ]
                    }
                  ]
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Custom Collection"],
        "summary": "[POST] Create custom collection",
        "description": "Create a new custom collection. You can optionally link it to a parent collection or attach products in the same request.",
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "Danh mục 2" },
                  "slug": { "type": "string", "example": "danh-muc-2" },
                  "image": { "type": "string", "example": "example.jpg" },
                  "banner_image": { "type": "string", "example": "banner.jpg" },
                  "parent_id": {
                    "type": "string",
                    "example": "7bv3gPWj",
                    "description": "Optional. Use this to assign a parent collection."
                  },
                  "products[0]": {
                    "type": "string",
                    "example": "PROD_12345",
                    "description": "Optional. Add one or more products to this collection."
                  }
                },
                "required": ["name", "slug"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Custom collection created successfully",
            "content": {
              "application/json": {
                "example": {
                  "message": "Collection created",
                  "data": {
                    "id": "8qA9dVqo",
                    "name": "Danh mục 2",
                    "slug": "danh-muc-2",
                    "parent_id": "7bv3gPWj",
                    "products": ["PROD_12345"]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/custom-collection/{id}": {
      "put": {
        "tags": ["Custom Collection"],
        "summary": "[PUT] Update custom collection",
        "description": "Update an existing custom collection. You can rename, reassign parent, or modify images and attached products.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "example": "8qA9dVqo"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "Danh mục đã chỉnh sửa" },
                  "slug": { "type": "string", "example": "danh-muc-2" },
                  "image": { "type": "string", "example": "new-image.jpg" },
                  "banner_image": { "type": "string", "example": "new-banner.jpg" },
                  "parent_id": {
                    "type": "string",
                    "example": "7bv3gPWj",
                    "description": "Optional. Assign to a new parent collection."
                  },
                  "products[0]": {
                    "type": "string",
                    "example": "PROD_002",
                    "description": "Optional. Replace or update attached products."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Custom collection updated successfully",
            "content": {
              "application/json": {
                "example": {
                  "message": "Collection updated",
                  "data": {
                    "id": "8qA9dVqo",
                    "name": "Danh mục đã chỉnh sửa",
                    "slug": "danh-muc-2",
                    "parent_id": "7bv3gPWj"
                  }
                }
              }
            }
          },
          "404": { "description": "Collection not found" }
        }
      },
      "delete": {
        "tags": ["Custom Collection"],
        "summary": "[DELETE] Custom collection",
        "description": "Delete a custom collection by ID. All sub-collections or related products remain unchanged unless handled separately.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "example": "8qA9dVqo"
          }
        ],
        "responses": {
          "200": {
            "description": "Collection deleted successfully",
            "content": {
              "application/json": {
                "example": {
                  "message": "Collection deleted",
                  "id": "8qA9dVqo"
                }
              }
            }
          },
          "404": { "description": "Collection not found" }
        }
      }
  },
    "/api/v1/news-category": {
      "get": {
        "tags": ["News Category"],
        "summary": "[GET] News Category",
        "description": "Retrieve all news categories available in the system.",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "List of news categories",
            "content": {
              "application/json": {
                "example": {
                  "data": [
                    { "id": 1, "name": "Bóng đá", "slug": "bong-da", "image": "67ce6d6e96e941741581678_559fafc155.webp" },
                    { "id": 2, "name": "Kinh tế", "slug": "kinh-te", "image": "67ce6d6e96e941741581678_559fafc155.webp" }
                  ]
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["News Category"],
        "summary": "[POST] News Category",
        "description": "Create a new news category with name, slug, and image fields.",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "Bóng đá" },
                  "slug": { "type": "string", "example": "bong-da" },
                  "image": {
                    "type": "string",
                    "example": "67ce6d6e96e941741581678_559fafc155.webp",
                    "description": "Upload or reference image filename"
                  }
                },
                "required": ["name", "slug"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "News category created successfully",
            "content": {
              "application/json": {
                "example": {
                  "message": "Category created successfully",
                  "data": {
                    "id": 1,
                    "name": "Bóng đá",
                    "slug": "bong-da",
                    "image": "67ce6d6e96e941741581678_559fafc155.webp"
                  }
                }
              }
            }
          },
          "400": { "description": "Invalid input data" }
        }
      }
    },
    "/api/v1/customers": {
      "get": {
        "tags": ["Manager User"],
        "summary": "[GET] User Collection",
        "description": "Lấy danh sách khách hàng với thông tin điểm thưởng, hạng thành viên và lịch sử giao dịch.",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "limit", "in": "query", "schema": { "type": "integer", "example": 10 } },
          { "name": "offset", "in": "query", "schema": { "type": "integer", "example": 0 } },
          { "name": "order", "in": "query", "schema": { "type": "string", "example": "id desc" } }
        ],
        "responses": {
          "200": {
            "description": "Danh sách khách hàng cùng thông tin điểm và hạng.",
            "content": {
              "application/json": {
                "example": {
                  "data": [
                    { "name": "Ngọc", "rank_point": 8, "rank": "Đồng", "phone": "84834664069" }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/redeem-voucher": {
      "get": {
        "tags": ["List Gifts"],
        "summary": "[GET] Redeem Voucher Collection",
        "description": "Lấy danh sách chương trình đổi quà, voucher và điểm cần thiết để quy đổi.",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Danh sách voucher có thể đổi.",
            "content": {
              "application/json": {
                "example": {
                  "data": [
                    {
                      "name": "test chương trình",
                      "promotion_batches": [{ "name": "test đổi quà", "points_needed_to_redeem": 10 }]
                    }
                  ]
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["List Gifts"],
        "summary": "[POST] Redeem Voucher",
        "description": "Tạo mới chương trình đổi quà và gắn voucher với điểm cần thiết.",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "example": {
                "name": "Thêm chương trình đổi quà",
                "is_active": true,
                "start_date": "2025-09-03 18:50:44",
                "end_date": "2025-09-06 18:50:47",
                "vouchers": [{ "promotion_batch_id": "EjWEpbQJ", "points": { "points_needed_to_redeem": 50 } }]
              }
            }
          }
        },
        "responses": { "200": { "description": "Chương trình tạo thành công" } }
      },
      "put": {
        "tags": ["List Gifts"],
        "summary": "[PUT] Redeem Voucher",
        "description": "Cập nhật thông tin chương trình đổi quà hoặc voucher.",
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "Chỉnh sửa thành công" } }
      },
      "delete": {
        "tags": ["List Gifts"],
        "summary": "[DELETE] Redeem Voucher",
        "description": "Xóa chương trình đổi quà hoặc voucher cụ thể.",
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "Đã xóa chương trình" } }
      }
    },
    "/api/v1/response-user-member": {
      "get": {
        "tags": ["Manage Membership"],
        "summary": "[GET] Rank Collection",
        "description": "Lấy danh sách hạng thành viên (Đồng, Bạc, Vàng, Kim Cương) cùng điều kiện đạt hạng.",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Danh sách hạng thành viên",
            "content": {
              "application/json": {
                "example": { "data": [{ "name": "Vàng", "min_spent_amount": 5000000, "discount": 15 }] }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Manage Membership"],
        "summary": "[POST] Rank Collection",
        "description": "Thêm mới hạng thành viên và thiết lập điều kiện đạt hạng.",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "example": {
                "amount_to_point": 10000,
                "converted_amount": 1,
                "rankDetails": [
                  {
                    "rank": "Kim cương",
                    "discount": 15,
                    "min_spent_amount": 20000000,
                    "maximum_discount_order": 5000000,
                    "vouchers": ["JWzoJYrN"]
                  }
                ]
              }
            }
          }
        },
        "responses": { "200": { "description": "Tạo hạng thành viên thành công" } }
      },
      "put": {
        "tags": ["Manage Membership"],
        "summary": "[PUT] Rank Collection",
        "description": "Cập nhật thông tin hạng thành viên hiện có.",
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "Cập nhật thành công" } }
      },
      "delete": {
        "tags": ["Manage Membership"],
        "summary": "[DELETE] Rank Collection",
        "description": "Xóa một hạng thành viên cụ thể.",
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "Xóa hạng thành viên thành công" } }
      }
    },
    "/api/v1/missions": {
      "get": {
        "tags": ["Manage Point"],
        "summary": "[GET] Missions Collection",
        "description": "Lấy danh sách nhiệm vụ tích điểm (mua hàng, chia sẻ, đánh giá,...)",
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "Danh sách nhiệm vụ" } }
      },
      "post": {
        "tags": ["Manage Point"],
        "summary": "[POST] Missions Collection",
        "description": "Thêm mới nhiệm vụ tích điểm cho người dùng.",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "example": {
                "missions": [
                  {
                    "title": "Đánh giá sản phẩm tốt",
                    "limit_plays": 10,
                    "award": 100000,
                    "type_mission": "rating_product",
                    "type_award": "extra_point",
                    "status": "active"
                  }
                ]
              }
            }
          }
        },
        "responses": { "200": { "description": "Tạo nhiệm vụ thành công" } }
      }
    }
  
  }
}
